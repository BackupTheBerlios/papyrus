<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>Eurocash WepApp</display-name>

    <description>Gestion commerciale</description>  

	 <!-- Eurocash init servlet -->
    <servlet>
        <servlet-name>EurocashInitServlet</servlet-name>
        <servlet-class>com.eurocash.action.EurocashInitServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
  
        <servlet>
                <servlet-name>DomainActionServlet</servlet-name>
                <servlet-class>com.eurocash.action.DomainActionServlet</servlet-class>
        </servlet>
 
   <!-- Servlet Mapping -->
 
   <servlet-mapping>
        <servlet-name>DomainActionServlet</servlet-name>
        <url-pattern>/DomainActionServlet</url-pattern>
   </servlet-mapping>
   	
   	<welcome-file-list>
   		<welcome-file>popup.jsp</welcome-file>
   	</welcome-file-list>

   <session-config>
	  <session-timeout>360</session-timeout>
   </session-config>
	
	<!-- taglib -->
	<taglib>
		<taglib-uri>http://java.sun.com/jstl/core</taglib-uri>
		<taglib-location>/WEB-INF/tld/c.tld</taglib-location>
	</taglib>
	
	<taglib>
		<taglib-uri>http://java.sun.com/jstl/core_rt</taglib-uri>
		<taglib-location>/WEB-INF/tld/c-rt.tld</taglib-location>
	</taglib>

</web-app>
